{% extends 'base.html.twig' %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{ program.poster }}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">saeson {{ season.number }} of {{ program.title }}</h1>
            <h2>episode {{ episode.number }}</h2>
            <p>{{ episode.synopsis }}</p>
            <p>Category : {{ program.category.name }}</p>
            <a href="{{ path('wild_season' , { 'programName' : program.title , 'id' : season.id }) }}">back for show all episodes to the season {{ season.number }}</a>
        </div>
    </div>

{% endblock %}