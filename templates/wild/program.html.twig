            {% for season in seasons %}
                    <a href="{{ path('wild_episode' , { 'programName' : program.title , 'id' : season.id }) }}"><li>Season : {{ season.number }}</li></a> <br> {{ season.description }}
            {% endfor %}
                </ul>
        </div>
    </div>
{% endblock %}